{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blackbox",
  "version": "0.1.0",
  "identifier": "com.blackbox.desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Blackbox",
        "width": 400,
        "height": 300,
        "resizable": true,
        "visible": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
